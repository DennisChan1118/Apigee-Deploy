<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-SetErrorVariables">
    <DisplayName>AM-SetErrorVariables</DisplayName>
    <AssignVariable>
        <Name>flow.error.code</Name>
        <Template>{flow.fault.errorcode}</Template>
    </AssignVariable>
    <AssignVariable>
        <Name>flow.error.message</Name>
        <Template>[{error.status.code} {error.reason.phrase}] {flow.fault.errormessage}</Template>
    </AssignVariable>
</AssignMessage>